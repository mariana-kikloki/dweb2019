extends layout
block content
    br
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de uma tarefa nova
            br
            .w3-container
                form.w3-container(action="/novatarefa", method="POST")
                    label.w3-teal
                        b Descrição
                    input.w3-input.w3-border.w3-light-gray(type="text" name="descricao" required="required")
                    br
                    label.w3-teal
                        b Data Limite
                    input.w3-input.w3-border.w3-light-gray(type="date" name="datalimite" required="required")
                    br
                    input.w3-btn.w3-blue-gray(type="submit" name="Enviar")
    br
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            br
            .w3-container
                table.w3-table-all
                    tr
                        th Descrição
                        th Data Limite
                        th Ação
                    each tar in lista
                        tr
                            td= tar.descricao
                            td= tar.datalimite
                            td
                                form(action="/apagar", method="POST")
                                    input(type="text" value=tar.id name="id" style="display:none")
                                    input.w3-btn.w3-blue-gray(type="submit" name="Apagar" value="Apagar" id="id_teste")
                br

            footer.w3-container.w3-teal
                address Gerado por Mariana Fernandes

                